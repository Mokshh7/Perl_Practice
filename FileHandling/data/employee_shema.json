{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "salary"],
    "properties": {
      "id":     { "type": "integer" },
      "name":   { "type": "string", "minLength": 1 },
      "salary": { "type": "number", "minimum": 0 }
    },
    "additionalProperties": false
  }
}
